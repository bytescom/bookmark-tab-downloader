{
  "name": "Bookmark Tab Downloader",
  "version": "1.1.0",
  "description": "Download all open tabs as bookmarks",
  "manifest_version": 3,
  "permissions": [
    "bookmarks",
    "tabs",
    "downloads",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}